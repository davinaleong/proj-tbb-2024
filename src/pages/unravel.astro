---
import MainLayoutAstro from "../layouts/main.layout.astro"
import { frontmatter, Content } from "../content/pages/unravel.md"
const { title, description, keywords, subtitle } = frontmatter
---
<MainLayoutAstro title={title} description={description} keywords={keywords}>
    <div class="flow">
        <!-- Hero Section -->
        <section class="section section-about section-about-hero">
          <article class="wrapper section__wrapper mx-auto p-4">
            <div class="section-about-hero__body | text-center flow">
              <h1 class="text-6xl font-serif">{title}</h1>

              <p class="text-xl">{subtitle}</p>
            </div>
            <!-- ./section-about-hero__body -->
          </article>
        </section>

        <section class="section section-about section-about-content">
            <article
              class="wrapper section__wrapper section-about-content__wrapper | content flow mx-auto p-4"
            >
              <Content />
            </article>
        </section>
    </div><!-- ./flow -->
</MainLayoutAstro>